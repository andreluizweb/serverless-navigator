{
  "name": "serverless-navigator",
  "displayName": "Serverless Navigator",
  "description": "Navigate from serverless.yml handler and schema definitions directly to source files and JSON schemas with clickable links and CodeLens.",
  "version": "0.3.2",
  "publisher": "andreluizbatista",
  "license": "MIT",
  "icon": "src/assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreluizweb/serverless-navigator"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Serverless Navigator",
      "properties": {
        "serverlessNavigator.stages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of available stages for CloudWatch Logs (e.g. [\"dev\", \"staging\", \"prod\"]). If empty, a free-text input will be shown."
        },
        "serverlessNavigator.defaultStage": {
          "type": "string",
          "default": "",
          "description": "Default stage pre-selected when opening CloudWatch Logs."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npx tsx test/test.ts",
    "package": "mkdir -p build && vsce package -o build/"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  }
}
